generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ORGANIZER
  PARTICIPANT
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String
  role      UserRole
  createdAt DateTime  @default(now())
  
  eventsCreated Event[]
  bookings      Booking[]
}

model Event {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  image       String?
  capacity    Int
  date        DateTime
  time        String
  venue       String
  organizer   User      @relation(fields: [organizerId], references: [id])
  organizerId Int
  createdAt   DateTime  @default(now())
  
  bookings    Booking[]
}

model Booking {
  id        Int      @id @default(autoincrement())
  bookingId String   @unique @default(uuid())
  event     Event    @relation(fields: [eventId], references: [id])
  eventId   Int
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
  
  @@unique([eventId, userId])
}
